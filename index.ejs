<% layout('layout/boilerplate') %>
    <h1>
    <%= category.toUpperCase() %>
     <%if(category=='All' ){%>Products

    <% } %>
    </h1>
    <ul>
        <% for (let product of products) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= product.image%>" alt="placeholder">
                    </div>
                         <div class="col-mg-8">
                <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <h6 class="card-title">Price: $<%= product.price %></h6>
                <h6 class="card-title">Product in Stock: <%= product.quantity %></h6>
              <a href="/products/<%= product._id %>" class="btn btn-outline-info">Show Product</a>
            </div>
          </div>
        </div>
      </div>
    
      <% } %>
      <div class="mt-3 big"><a href="/products/new" class="btn btn-lg btn-outline-warning">Create Product</a></div>
    </ul>
    
    <%if(category !=='All' ){%>
        <div><a href="/products">All Products</a></div>
        <% } %>