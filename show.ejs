<% layout('layout/boilerplate') %>
    <h1>
        <%= product.name.toUpperCase()%>
    </h1>

    <div class="col-6 offset-3">
    <div class="cards" mb-4>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= product.image%>" alt="placeholder">
            </div>
                 <div class="col-mg-8">
        <div class="card-body">
        <h6 class="card-title mt-3">Price: $<%= product.price %></h6>
        <h6 class="card-title mt-3">Product in Stock: <%= product.quantity %></h6>
        <h6 class="card-title mt-3">Category: <a href="/products?category=<%= product.category %>">
            <%= product.category %></h6>
       </div>
    </div> 
  </div>
</div>
</div>
<div class="mt-2">
    <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
        <button class="btn btn-outline-danger">Delete Product</button>
    </form>
    </div>
    <div class="mt-2">
        <a class="btn btn-outline-warning" href="/products/<%= product._id %>/edit">Edit Product</a>
        </div>
    
     <div class="mt-2">
        <a class="btn btn-outline-info" href="/products">All Products</a>
    </div>
    